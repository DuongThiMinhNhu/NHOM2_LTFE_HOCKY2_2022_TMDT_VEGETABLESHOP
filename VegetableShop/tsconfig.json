{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "ES6",
    "esModuleInterop": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    // Recommended
    "moduleResolution": "node",
    "importHelpers": true,
    "resolveJsonModule":true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "ng-uikit-pro-standard": [
        "dist/ng-uikit-pro-standard/ng-uikit-pro-standard",
        "dist/ng-uikit-pro-standard"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}